<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shim"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/channelShimmerOne"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/shimmer_rectangle_object" />

        <ImageView
            android:id="@+id/channelShimmerTwo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/shimmer_rectangle_object" />

        <ImageView
            android:id="@+id/channelShimmerThree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/shimmer_rectangle_object" />

        <ImageView
            android:id="@+id/channelShimmerFour"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/shimmer_rectangle_object" />

        <ImageView
            android:id="@+id/channelShimmerFive"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/shimmer_rectangle_object" />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
