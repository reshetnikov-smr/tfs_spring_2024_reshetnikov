<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topicItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/highlight"
    android:paddingHorizontal="@dimen/padding_big"
    android:paddingVertical="@dimen/padding_decreased">

    <TextView
        android:id="@+id/topicName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/placeholder"
        android:textColor="@color/onContainer"
        android:textSize="@dimen/font_increased"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Testing" />

    <TextView
        android:id="@+id/topicMessageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text=""
        android:textColor="@color/onContainer"
        android:textSize="@dimen/font_standard"
        app:layout_constraintBottom_toBottomOf="@+id/topicName"
        app:layout_constraintStart_toEndOf="@+id/topicName"
        app:layout_constraintTop_toTopOf="@+id/topicName"
        tools:text="1240 mes" />
</androidx.constraintlayout.widget.ConstraintLayout>
